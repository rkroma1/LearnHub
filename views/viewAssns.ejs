<% include header.ejs %>
    <div class="table-wrapper">
        <% if (users.length > 0) {%>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Assignment Name</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach((user, index) => { %>
                        <tr>
                            <th scope="row"><%= user.assignmentName %></th>
                            <%if(currentUser.usertype !== "user") { %>
			    <td>
                               <a href="/assn/edit/<%= user.assignmentID %>" class="btn btn-sm btn-success">Edit   </a>
				<form action="/assn/delete/<%= user.assignmentID %>?_method=DELETE" method="post">
    				<button type="submit" name="delete" class="btn btn-sm btn-danger">Delete</button>
				</form>
                            </td>
				<%}%>

                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No Assignments found.</p>
        <% } %>
    </div>
</div>
</body>
</html>
