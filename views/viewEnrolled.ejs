<% include header.ejs %>

<div class="container">
<div class="row">
<h1 style="text-align:center;">Select a Course</h1>
<div style="width:30%; margin: auto;">
<form action="/enroll" method="POST">
        <div class="form-group">
	<select class="form-control" name=course>
  		 <% if( courses.length> 0) { %>
		                        <% courses.forEach((course,index)=>{ %>
                        <option value="<%= course.courseName %>" > <%=course.courseName %>   </option>
                        <% }) %>
		<% } else { %>
			<option value="default">Course</option>
        	<% } %>
	</select>
        </div>
        <div class="form-group">
	<select class="form-control" name=year>
			<option value=2019>2019</option>
                        <option value=2020>2020 </option>
	</select>
        </div>
        <div class="form-group">
	<select class="form-control" name=semester>
                        <option value="Fall">Fall</option>
			<option value="Spring">Spring</option>
                        <option value="Summer">Summer</option>
	</select>
        </div>
        <button class="btn btn-block btn-lg btn-primary">Submit.</button>
</form>
        <a href="/">Go Back</a>
</div>
</div>
</div>

<h1>
	Enrolled Students
</h1>

  <div class="table-wrapper">
        <% if ( ((typeof users) !== 'undefined') && (users.length > 0)) {%>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col"></th>
                        <th scope="col">Student Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Drop</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach((user, index) => { %>
                        <tr>
                            <th scope="row"><%= user.userID %></th>
                            <td><%= user.name %></td>
                            <td><%= user.email %></td>
                            <td>
<%if(currentUser.usertype !== "user") { %>
				 <a href="/grade/add/<%= user.enrollmentID %>" class="btn btn-sm btn-success">Add a Grade</a>
				<a href="/grade/view/<%= user.enrollmentID %>" class="btn btn-sm btn-success">View Student Grades</a>
          
                                <form action="/enroll/delete/<%= user.enrollmentID %>?_method=DELETE" method="post">
                                        <button type="submit" name="delete" class="btn btn-sm btn-danger">Delete</button>
                                </form>
<%}%>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No students enrolled or you have not selected a course.</p>
        <% } %>
    </div>
</div>
