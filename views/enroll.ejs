<% include header.ejs %>

<div class="container">
<div class="row">
<h1 style="text-align:center;">New Course</h1>
<div style="width:30%; margin: auto;">
<form action="/enroll/add" method="POST">
        <div class="form-group">
	<select class="form-control" name="user">
  		 <% if(typeof users !== 'undefined' && users.length> 0) { %>
		                        <% users.forEach((user,index)=>{ %>
                        <option value=<%= user.userID %> > <%=user.name %>   </option>
                        <% }) %>
		<% } else { %>
			<option value="default">Student</option>
        	<% } %>
	</select>
        </div>
        <div class="form-group">
	<select class="form-control" name="course">
  		 <% if(typeof courses !== 'undefined' && courses.length> 0) { %>
		                        <% courses.forEach((course,index)=>{ %>
                        <option value=<%= course.courseID %> > <%=course.courseName %>   </option>
                        <% }) %>
		<% } else { %>
			<option value="default">Course</option>
        	<% } %>
	</select>
        </div>
        <button class="btn btn-block btn-lg btn-primary">Submit.</button>
</form>
        <a href="/">Go Back</a>
</div>
</div>
</div>

